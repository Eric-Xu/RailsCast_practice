<h3>Incomplete Tasks</h3>
<hr>
<% @task_months.each do |month, tasks| %>
	<h4><%= month.strftime("%B %Y") %></h4>
	<table>
	  <% tasks.each do |task| %>
	    <tr>
	    	<td>
	    		<b><%= link_to task.name, task_path(task) %></b>
		    	<small> in <%= task.project.name %></small>
		    	<!-- ( due on <%#= task.due_at.to_date.to_s(:long) %>) -->
		    	(due on <%= task.due_at.to_s(:due_date) %>)
		    </td>
		  </tr>
	  <% end %>
  </table>
<% end %>

<hr>
<%= link_to "Add A New Task", new_task_path %>
| <%= link_to "Completed Tasks", completed_tasks_path %>