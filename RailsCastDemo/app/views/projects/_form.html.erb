<%= form_for @project do |f| %>
	<% if params[:preview_button] %>
		<div id="preview">
			<h2><%= @project.name %></h2>
			<%= @project.description %>
		</div>
	<% end %>

	<%= f.label :name %><br>
	<%= f.text_field :name %><br>
	<%= f.label :description %><br>
	<%= f.text_area :description %><br>
	<%= f.submit "Submit" %>
	<%= f.submit "Preview", name: "preview_button" %>
<% end %>